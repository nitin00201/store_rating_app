<h2 class="text-2xl font-bold text-green-600 mb-6">Add New User</h2>

<%= form_with model: @user, url: admin_users_path, local: true do |f| %>
  <div class="space-y-4">
    <%= f.label :name %>
    <%= f.text_field :name, class: "w-full border px-4 py-2 rounded" %>

    <%= f.label :email %>
    <%= f.email_field :email, class: "w-full border px-4 py-2 rounded" %>

    <%= f.label :address %>
    <%= f.text_area :address, class: "w-full border px-4 py-2 rounded" %>

    <%= f.label :role %>
    <%= f.select :role, [["Normal User", "normal_user"], ["Store Owner", "store_owner"], ["Admin", "admin"]], {}, class: "w-full border px-4 py-2 rounded" %>

    <%= f.label :password %>
    <%= f.password_field :password, class: "w-full border px-4 py-2 rounded" %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "w-full border px-4 py-2 rounded" %>

    <%= f.submit "Create User", class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
  </div>
<% end %>
