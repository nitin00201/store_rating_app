<!-- Stylish Header with Gradient Background -->
<header class="relative bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 shadow-2xl overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 20% 50%, white 2px, transparent 2px), radial-gradient(circle at 80% 50%, white 2px, transparent 2px); background-size: 60px 60px;"></div>
  </div>
  
  <!-- Animated Background Orbs -->
  <div class="absolute top-0 left-0 w-72 h-72 bg-white/5 rounded-full mix-blend-multiply filter blur-xl animate-pulse"></div>
  <div class="absolute top-0 right-0 w-72 h-72 bg-white/5 rounded-full mix-blend-multiply filter blur-xl animate-pulse" style="animation-delay: 2s;"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 py-6">
    <div class="flex flex-col lg:flex-row items-center justify-between space-y-4 lg:space-y-0">
      
      <!-- Logo / App Name -->
      <div class="flex items-center space-x-3">
        <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center border border-white/30">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-white">
            <%= link_to root_path, class: "hover:text-yellow-200 transition-colors duration-300 flex items-center space-x-2" do %>
              <span>StoreRating</span>
              <span class="text-yellow-300">App</span>
            <% end %>
          </h1>
          <p class="text-white/80 text-sm hidden sm:block">Discover & Rate Amazing Stores</p>
        </div>
      </div>

      <!-- Navigation Links -->
      <nav class="flex flex-wrap items-center gap-3">
        <% if user_signed_in? %>
          <!-- User Info Badge -->
          <div class="hidden md:flex items-center space-x-2 bg-white/10 backdrop-blur-sm rounded-full px-4 py-2 border border-white/20">
            <div class="w-8 h-8 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-full flex items-center justify-center">
              <span class="text-white font-semibold text-sm"><%= current_user.email.first.upcase %></span>
            </div>
            <span class="text-white/90 text-sm font-medium">
              <%= current_user.email.split('@').first.capitalize %>
            </span>
          </div>

          <!-- Role-based Dashboard Links -->
          <% if current_user.admin? %>
            <%= link_to dashboard_path, class: "group flex items-center space-x-2 bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white px-4 py-2 rounded-full border border-white/20 hover:border-white/40 transition-all duration-300 transform hover:scale-105" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
              <span class="font-medium">Admin Dashboard</span>
            <% end %>
          <% elsif current_user.store_owner? %>
            <%= link_to dashboard_path, class: "group flex items-center space-x-2 bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white px-4 py-2 rounded-full border border-white/20 hover:border-white/40 transition-all duration-300 transform hover:scale-105" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
              <span class="font-medium">My Store</span>
            <% end %>
          <% else %>
            <%= link_to dashboard_path, class: "group flex items-center space-x-2 bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white px-4 py-2 rounded-full border border-white/20 hover:border-white/40 transition-all duration-300 transform hover:scale-105" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
              <span class="font-medium">Browse Stores</span>
            <% end %>
          <% end %>

          <!-- Edit Profile Link -->
          <%= link_to edit_user_registration_path, class: "flex items-center space-x-2 bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white px-4 py-2 rounded-full border border-white/20 hover:border-white/40 transition-all duration-300 transform hover:scale-105" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            <span class="font-medium hidden sm:inline">Profile</span>
          <% end %>

          <!-- Logout Button -->
          <%= button_to destroy_user_session_path,
                method: :delete,
                data: { turbo: false },
                class: "group flex items-center space-x-2 bg-gradient-to-r from-red-500 to-pink-600 hover:from-red-600 hover:to-pink-700 text-white px-4 py-2 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 border border-red-400/30" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
            </svg>
            <span class="font-medium">Logout</span>
          <% end %>

        <% else %>
          <!-- Guest Navigation -->
          <div class="flex items-center space-x-3">
            <%= link_to new_user_registration_path, class: "flex items-center space-x-2 bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white px-6 py-2 rounded-full border border-white/20 hover:border-white/40 transition-all duration-300 transform hover:scale-105" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
              </svg>
              <span class="font-medium">Sign Up</span>
            <% end %>
            
            <%= link_to new_user_session_path, class: "flex items-center space-x-2 bg-white text-indigo-600 hover:bg-gray-50 px-6 py-2 rounded-full font-semibold shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 border border-white/20" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
              </svg>
              <span>Login</span>
            <% end %>
          </div>
        <% end %>
      </nav>
    </div>
  </div>

  <!-- Bottom Gradient Border -->
  <div class="h-1 bg-gradient-to-r from-yellow-400 via-pink-500 to-purple-600"></div>
</header>

<!-- Mobile Menu Toggle (Optional Enhancement) -->
<div class="lg:hidden bg-white/5 backdrop-blur-sm border-t border-white/10">
  <div class="max-w-7xl mx-auto px-4 py-2">
    <% if user_signed_in? %>
      <div class="flex items-center justify-center space-x-4 text-white/80 text-sm">
        <span>Welcome back, <strong><%= current_user.email.split('@').first.capitalize %></strong></span>
        <div class="w-1 h-1 bg-white/50 rounded-full"></div>
        <span class="capitalize">
          <%= current_user.admin? ? "Admin" : current_user.store_owner? ? "Store Owner" : "Customer" %>
        </span>
      </div>
    <% end %>
  </div>
</div>

<!-- Add custom animations -->
<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  /* Hover glow effect */
  .group:hover {
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
  }
</style>